{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Produits</h1>

    <table>
        <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Prix HT</th>
            <th>Prix TTC</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.label }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product_price(product.price)|localizedcurrency('EUR') }}</td>
                <td>{{ product_price(product.priceTtc)|localizedcurrency('EUR') }}</td>
                <td><a href="{{ path('product_edit', [product.id]) }}">Ajouter un produit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <p>Nombre de produit(s) : {{ nb_products }}</p>
    <a href="{{ path('product_new') }}">Ajouter un produit</a>
</div>
{% endblock %}
