{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Nous contacter</h1>

    <p>Entreprise : {{ contactInformation.organization }}</p>
    <p>
        Adresse :<br/>
        {{ contactInformation.address.street }}<br/>
        {{ contactInformation.address.zip_code }} {{ contactInformation.address.city }}<br/>
    </p>
    <p>Téléphone : {{ contactInformation.phone }}</p>
</div>
{% endblock %}
